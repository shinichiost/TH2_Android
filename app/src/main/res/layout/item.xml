<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    >
<ImageView
    android:layout_width="100dp"
    android:layout_height="100dp"
    android:src="@drawable/img1"
    ></ImageView>
    <LinearLayout
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/sname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nha gia kim"
            android:textStyle="bold"
            android:textSize="20dp"
            ></TextView>
        <TextView
            android:id="@+id/sauthor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Paulo coelho"
            ></TextView>
        <TextView
            android:id="@+id/spublishday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="20/10/2020"
            ></TextView>
        <TextView
            android:id="@+id/spublisher"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="NXB Kim dong"
            ></TextView>
        <TextView
            android:id="@+id/sprice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="90000Đ"
            android:textColor="#F1440E"
            ></TextView>
    </LinearLayout>
    <Button
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:background="@color/purple_200"
        android:text="Remove"
        android:gravity="center">

    </Button>

</LinearLayout>